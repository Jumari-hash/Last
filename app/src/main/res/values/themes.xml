<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.TurboLite" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/neon_cyan</item>
        <item name="colorOnPrimary">@color/deep_black</item>
        <item name="colorSecondary">@color/electric_purple</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorTertiary">@color/neon_green</item>
        <item name="android:colorBackground">@color/deep_black</item>
        <item name="colorSurface">@color/glass_dark</item>
        <item name="colorOnSurface">@color/text_primary</item>
        
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:windowBackground">@drawable/gradient_background</item>
        
        <item name="fontFamily">@font/orbitron_medium</item>
        <item name="android:textColor">@color/text_primary</item>
        
        <item name="tabStyle">@style/Widget.TurboLite.TabLayout</item>
        <item name="materialButtonStyle">@style/Widget.TurboLite.Button</item>
    </style>
    
    <style name="Widget.TurboLite.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="tabSelectedTextColor">@color/neon_cyan</item>
        <item name="tabIndicatorColor">@color/neon_cyan</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="android:background">@color/glass_dark</item>
        <item name="tabTextAppearance">@style/TextAppearance.TurboLite.Tab</item>
    </style>
    
    <style name="TextAppearance.TurboLite.Tab" parent="TextAppearance.Material3.TitleSmall">
        <item name="fontFamily">@font/rajdhani_bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
    
    <style name="Widget.TurboLite.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/neon_cyan</item>
        <item name="android:textColor">@color/deep_black</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">@font/rajdhani_bold</item>
        <item name="android:letterSpacing">0.15</item>
    </style>
    
    <style name="TextAppearance.TurboLite.Headline" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="fontFamily">@font/orbitron_bold</item>
        <item name="android:textColor">@color/neon_cyan</item>
        <item name="android:textSize">32sp</item>
    </style>
    
    <style name="TextAppearance.TurboLite.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="fontFamily">@font/orbitron_medium</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>
    
    <style name="TextAppearance.TurboLite.Body" parent="TextAppearance.Material3.BodyMedium">
        <item name="fontFamily">@font/rajdhani_medium</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>
</resources>
