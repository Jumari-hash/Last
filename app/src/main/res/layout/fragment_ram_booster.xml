<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRamStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/translucent_dark"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/glass_border"
            app:strokeWidth="1dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvRamTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ram_title"
                    android:textSize="24sp"
                    android:textColor="@color/neon_cyan"
                    android:fontFamily="@font/orbitron_bold"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.turbolite.optimizer.views.CircularProgressView
                    android:id="@+id/circularRamProgress"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/tvRamTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvRamPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="36sp"
                    android:textColor="@color/neon_cyan"
                    android:fontFamily="@font/orbitron_bold"
                    app:layout_constraintTop_toTopOf="@id/circularRamProgress"
                    app:layout_constraintBottom_toBottomOf="@id/circularRamProgress"
                    app:layout_constraintStart_toStartOf="@id/circularRamProgress"
                    app:layout_constraintEnd_toEndOf="@id/circularRamProgress"/>

                <LinearLayout
                    android:id="@+id/layoutRamInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/circularRamProgress"
                    app:layout_constraintStart_toStartOf="parent">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ram_used"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/rajdhani_medium"/>

                        <TextView
                            android:id="@+id/tvRamUsed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 MB"
                            android:textSize="18sp"
                            android:textColor="@color/electric_orange"
                            android:fontFamily="@font/rajdhani_bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ram_free"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/rajdhani_medium"/>

                        <TextView
                            android:id="@+id/tvRamFree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 MB"
                            android:textSize="18sp"
                            android:textColor="@color/neon_green"
                            android:fontFamily="@font/rajdhani_bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ram_total"
                            android:textSize="12sp"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/rajdhani_medium"/>

                        <TextView
                            android:id="@+id/tvRamTotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 MB"
                            android:textSize="18sp"
                            android:textColor="@color/text_primary"
                            android:fontFamily="@font/rajdhani_bold"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBoostRam"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/ram_boost"
            android:textSize="18sp"
            android:fontFamily="@font/rajdhani_bold"
            app:cornerRadius="12dp"
            app:backgroundTint="@color/neon_cyan"
            android:textColor="@color/deep_black"
            app:layout_constraintTop_toBottomOf="@id/cardRamStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
